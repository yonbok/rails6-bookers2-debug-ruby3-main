    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="d-flex flex-column vh-100">
    <%= render 'layouts/header' %>
      <main>
        <p id="notice"><%= notice %></p>
      <%= yield %>
